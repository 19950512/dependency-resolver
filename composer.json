{
    "name": "cviniciussdias/dependency-resolver",
    "description": "Dependency Resolver. A simple component to resolve classes dependencies and instantiate them automagically.",
    "type": "library",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "CViniciusSDias",
            "email": "carlosv775@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "pestphp/pest-plugin": "^1.0.0",
        "phpunit/phpunit": "^9.5",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-mock": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "CViniciusSDias\\DependencyResolver\\": "src/"
        }
    },
    "config": {
        "allow-plugins": true,
        "platform": {
            "php": "8.0"
        }
    },
    "scripts":{
        "test": "/usr/bin/php8.0 vendor/bin/pest",
        "coverage": "/usr/bin/php8.0 vendor/bin/pest --coverage"
    }
}
